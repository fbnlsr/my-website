        </svg>
      </a>
    </div>
  </div>
</footer>

<!-- JavaScript -->
<script>
  const mode = localStorage.getItem('mode');

  if (mode && mode === 'dark') {
    document
      .body
      .classList
      .add('dark-mode');
  }

  if (!mode || mode === 'light') {
    document
      .body
      .classList
      .remove('dark-mode');
  }
</script>


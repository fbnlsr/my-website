<div class="column is-half nav-home">
    <nav class="navbar" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="button navbar-burger is-navbar-home" data-target="navMenu">
                <span></span>
                <span></span>
                <span></span>
            </a>
        </div>

        <div class="navbar-menu">
            <div class="navbar-start">
                {%- for item in site.headerLinks -%}
                    <a class="navbar-item {% if item.translationKey == "home" -%}is-active{%- endif -%}" href="/{{ locale }}/{{ item.url[locale] }}">{{ i18n[locale][item.translationKey] }}</a>
                {%- endfor -%}
            </div>
        </div>
        <div class="navbar-menu is-hidden-desktop" id="navMenu">
            {%- for item in site.headerLinks -%}
                <span>
                    <a class="navbar-item {% if page.url == "{{ locale }}/{{ item.url[locale] }}" %}is-active{% endif %}" href="{{ translatedUrl }}">{{ i18n[locale][item.translationKey] }}</a>
                </span>
            {%- endfor -%}
            <hr>
            {%- for lgg in site.languages -%}
                <a
            class="lang is-lang-switcher"
            href="/{{ lgg.code }}/{{ link }}"
            data-lang="{{ lgg.code }}"><img src="/img/flag-{{ lgg.code }}.svg" alt="{{ lgg.code }}"></a>
            {%- endfor -%}
        </div>
    </nav>
</div>

---
permalink: '/en/feed.xml'
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ i18n[locale]['sitename'] }}</title>
    <subtitle></subtitle>
    <link href="{{ site.url }}{{ permalink }}" rel="self"/>
    <link href="{{ site.url }}/"/>
    {% if collections["posts_en"] | length %}
        <updated>{{ collections["posts_en"] | rssLastUpdatedDate }}</updated>
    {% endif %}
    <id>{{ site.url }}</id>
    <author>
        <name>{{ site.author.name }}</name>
        <email>{{ site.author.email }}</email>
    </author>
    {% for post in collections["posts_en"] %}
        {% set absolutePostUrl %}{{ site.url }}{{ post.url | url }}{% endset %}
        <entry>
            <title>{{ post.data.title }}</title>
            <link href="{{ absolutePostUrl }}"/>
            <updated>{{ post.date | rssDate }}</updated>
            <id>{{ absolutePostUrl }}</id>
            <content type="html">
                <![CDATA[
      {{ post.templateContent | safe }}
    ]]>
            </content>
        </entry>
    {% endfor %}
</feed>

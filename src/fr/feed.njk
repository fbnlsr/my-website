---
permalink: '/fr/blog/feed.xml'
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ i18n[locale]['sitename'] }}</title>
    <subtitle></subtitle>
    <link href="{{ site.url }}{{ permalink }}" rel="self" />
    <link href="{{ site.url }}/" />
    {% if collections["posts_fr"] | length %}
        <updated>{{ collections["posts_fr"] | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
    {% endif %}
    <id>{{ site.url }}</id>
    <author>
        <name>{{ site.author.name }}</name>
        <email>{{ site.author.email }}</email>
    </author>
    {% for post in collections["posts_fr"] | reverse %}
        {% set absolutePostUrl %}{{ site.url }}{{ post.url | url }}{% endset %}
        <entry>
            <title>{{ post.data.title }}</title>
            <link href="{{ absolutePostUrl }}" />
            <updated>{{ post.date | dateToRfc3339 }}</updated>
            <id>{{ absolutePostUrl }}</id>
            <content type="html">
                <![CDATA[
                {{ post.templateContent | safe }}
                ]]>
            </content>
        </entry>
    {% endfor %}
</feed>
